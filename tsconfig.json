{
    "compilerOptions": {
        "removeComments": false,
        "preserveConstEnums": true,
        "sourceMap": true,
        "target": "es5",
        "lib": [
            "dom",
            "es2015.promise",
            "es5"
        ],
        "module": "es2015",
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "noEmitOnError": true,
        "noImplicitAny": false,
        "baseUrl": "types",
        "typeRoots": [
            "types"
        ],
        "types": [
            "jquery",
            "jasmine"
        ]
    },
    "exclude": [
        "node_modules"
    ]
}